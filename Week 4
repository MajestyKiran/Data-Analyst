import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import plotly.graph_objects as go
import seaborn as sns
# Read csv file
df = pd.read_csv('menu.csv')




# Check statistical facts
print(df.describe())
# Calculate the maximum value
max_values = df[['Calories', 'Total Fat', 'Carbohydrates', 'Dietary Fiber', 'Sugars', 'Protein', 'Vitamin A (% Daily Value)', 'Vitamin C (% Daily Value)', 'Calcium (% Daily Value)', 'Iron (% Daily Value)']].max()
print(max_values)




# Calculate correlation matrix
corr_matrix = df.corr()
# Plot correlation matrix using seaborn library
sns.heatmap(corr_matrix, annot=True, cmap="coolwarm")
plt.show()





import seaborn as sns
import matplotlib.pyplot as plt
# Assuming df is your DataFrame
df = sns.load_dataset('beverages')
# Create boxplot
sns.boxplot(x='Category', y='Calories', data=df)
# Add labels
plt.title('Boxplot for Calories vs Category')
plt.xlabel('Category')
plt.ylabel('Calories')
# Show plot
plt.show()






# Assuming df is your DataFrame
df = sns.load_dataset('beverages')
# Find the item with the highest quantity for each attribute
max_calories = df[df['Calories'] == df['Calories'].max()]['Item'].values[0]
max_total_fat = df[df['Total Fat'] == df['Total Fat'].max()]['Item'].values[0]
max_carbohydrates = df[df['Carbohydrates'] == df['Carbohydrates'].max()]['Item'].values[0]
max_dietary_fiber = df[df['Dietary Fiber'] == df['Dietary Fiber'].max()]['Item'].values[0]
max_sugars = df[df['Sugars'] == df['Sugars'].max()]['Item'].values[0]
max_protein = df[df['Protein'] == df['Protein'].max()]['Item'].values[0]
max_vitamin_a = df[df['Vitamin A ( % Daily Value )'] == df['Vitamin A ( % Daily Value )'].max()]['Item'].values[0]
max_vitamin_c = df[df['Vitamin C ( % Daily Value )'] == df['Vitamin C ( % Daily Value )'].max()]['Item'].values[0]
max_calcium = df[df['Calcium ( % Daily Value )'] == df['Calcium ( % Daily Value )'].max()]['Item'].values[0]
max_iron = df[df['Iron ( % Daily Value )'] == df['Iron ( % Daily Value )'].max()]['Item'].values[0]
